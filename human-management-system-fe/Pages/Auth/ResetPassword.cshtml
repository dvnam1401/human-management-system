@page
@model human_management_system_fe.Pages.Auth.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="reset-password-page">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="reset-icon mb-3">
                                <i class="bi bi-shield-lock text-primary" style="font-size: 3rem;"></i>
                            </div>
                            <h3 class="fw-bold">Reset Password</h3>
                            <p class="text-muted">Đặt lại mật khẩu của bạn</p>
                        </div>

                        <!-- Progress Steps -->
                        <div class="steps-indicator mb-4">
                            <div class="step active" id="step-indicator-1">
                                <div class="step-number">1</div>
                                <div class="step-label">Nhập Email</div>
                            </div>
                            <div class="step-divider"></div>
                            <div class="step" id="step-indicator-2">
                                <div class="step-number">2</div>
                                <div class="step-label">Xác nhận OTP</div>
                            </div>
                        </div>

                        <!-- Step 1: Email Input -->
                        <div id="step1" class="step-content">
                            <form id="emailForm">
                                <div class="mb-3">
                                    <label for="email" class="form-label">
                                        <i class="bi bi-envelope me-1"></i>Email
                                    </label>
                                    <input type="email" class="form-control form-control-lg" id="email" 
                                           placeholder="Nhập email của bạn" required autofocus>
                                    <div class="invalid-feedback"></div>
                                    <small class="form-text text-muted">
                                        Chúng tôi sẽ gửi mã OTP đến email này
                                    </small>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary btn-lg" id="sendOtpButton">
                                        <i class="bi bi-send me-2"></i>Gửi mã OTP
                                    </button>
                                    <a href="/Auth/Login" class="btn btn-outline-secondary">
                                        <i class="bi bi-arrow-left me-2"></i>Quay lại đăng nhập
                                    </a>
                                </div>
                            </form>
                        </div>

                        <!-- Step 2: OTP Verification and New Password -->
                        <div id="step2" class="step-content" style="display: none;">
                            <form id="verifyOtpForm">
                                <div class="mb-3">
                                    <label for="otp" class="form-label">
                                        <i class="bi bi-key me-1"></i>Mã OTP
                                    </label>
                                    <input type="text" class="form-control form-control-lg text-center" id="otp" 
                                           placeholder="Nhập mã OTP 6 số" maxlength="6" required>
                                    <div class="invalid-feedback"></div>
                                    <small class="form-text text-muted">
                                        Mã OTP có hiệu lực trong <span id="countdown">5:00</span>
                                    </small>
                                </div>

                                <div class="mb-3">
                                    <label for="newPassword" class="form-label">
                                        <i class="bi bi-lock me-1"></i>Mật khẩu mới
                                    </label>
                                    <div class="input-group">
                                        <input type="password" class="form-control form-control-lg" id="newPassword" 
                                               placeholder="Nhập mật khẩu mới" required>
                                        <button class="btn btn-outline-secondary" type="button" id="toggleNewPassword">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                    <div class="invalid-feedback"></div>
                                </div>

                                <div class="mb-3">
                                    <label for="confirmPassword" class="form-label">
                                        <i class="bi bi-lock-fill me-1"></i>Xác nhận mật khẩu
                                    </label>
                                    <div class="input-group">
                                        <input type="password" class="form-control form-control-lg" id="confirmPassword" 
                                               placeholder="Nhập lại mật khẩu mới" required>
                                        <button class="btn btn-outline-secondary" type="button" id="toggleConfirmPassword">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                    <div class="invalid-feedback"></div>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-success btn-lg" id="resetPasswordButton">
                                        <i class="bi bi-check-circle me-2"></i>Đặt lại mật khẩu
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" id="backToStep1">
                                        <i class="bi bi-arrow-left me-2"></i>Gửi lại OTP
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/common.js"></script>
    
    <script>
        let userEmail = '';
        let countdownTimer;
        let timeRemaining = 300; // 5 minutes in seconds

        $(document).ready(function() {
            // Toggle password visibility
            $('#toggleNewPassword, #toggleConfirmPassword').click(function() {
                const targetId = $(this).attr('id') === 'toggleNewPassword' ? '#newPassword' : '#confirmPassword';
                const passwordInput = $(targetId);
                const icon = $(this).find('i');
                
                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    icon.removeClass('bi-eye').addClass('bi-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    icon.removeClass('bi-eye-slash').addClass('bi-eye');
                }
            });

            // Step 1: Send OTP
            $('#emailForm').submit(async function(e) {
                e.preventDefault();
                
                HRMS.clearAllValidationErrors(this);
                
                const email = $('#email').val().trim();

                if (!email) {
                    HRMS.showValidationError($('#email')[0], 'Email là bắt buộc');
                    return;
                }

                if (!HRMS.validateEmail(email)) {
                    HRMS.showValidationError($('#email')[0], 'Email không hợp lệ');
                    return;
                }

                const sendOtpButton = $('#sendOtpButton')[0];
                HRMS.showLoading(sendOtpButton);

                try {
                    const response = await fetch(HRMS.apiBaseUrl + '/account/reset-password/request', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        credentials: 'include',
                        body: JSON.stringify({ email: email })
                    });

                    const result = await response.json();

                    if (response.ok) {
                        userEmail = email;
                        HRMS.showToast('Mã OTP đã được gửi đến email của bạn', 'success');
                        goToStep2();
                    } else {
                        HRMS.showToast(result.message || 'Không thể gửi OTP', 'danger');
                    }
                } catch (error) {
                    console.error('Send OTP error:', error);
                    HRMS.showToast('Đã xảy ra lỗi khi gửi OTP', 'danger');
                } finally {
                    HRMS.hideLoading(sendOtpButton);
                }
            });

            // Step 2: Verify OTP and Reset Password
            $('#verifyOtpForm').submit(async function(e) {
                e.preventDefault();
                
                HRMS.clearAllValidationErrors(this);
                
                const otp = $('#otp').val().trim();
                const newPassword = $('#newPassword').val();
                const confirmPassword = $('#confirmPassword').val();

                // Validation
                let isValid = true;
                
                if (!otp || otp.length !== 6) {
                    HRMS.showValidationError($('#otp')[0], 'Mã OTP phải có 6 số');
                    isValid = false;
                }
                
                if (!newPassword || newPassword.length < 6) {
                    HRMS.showValidationError($('#newPassword')[0], 'Mật khẩu phải có ít nhất 6 ký tự');
                    isValid = false;
                }
                
                if (newPassword !== confirmPassword) {
                    HRMS.showValidationError($('#confirmPassword')[0], 'Mật khẩu xác nhận không khớp');
                    isValid = false;
                }

                if (!isValid) return;

                const resetPasswordButton = $('#resetPasswordButton')[0];
                HRMS.showLoading(resetPasswordButton);

                try {
                    const response = await fetch(HRMS.apiBaseUrl + '/account/reset-password/verify', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        credentials: 'include',
                        body: JSON.stringify({
                            email: userEmail,
                            otp: otp,
                            newPassword: newPassword
                        })
                    });

                    const result = await response.json();

                    if (response.ok) {
                        HRMS.showToast('Đặt lại mật khẩu thành công! Đang chuyển hướng...', 'success');
                        clearInterval(countdownTimer);
                        setTimeout(() => {
                            window.location.href = '/Auth/Login';
                        }, 2000);
                    } else {
                        HRMS.showToast(result.message || 'OTP không hợp lệ hoặc đã hết hạn', 'danger');
                        HRMS.hideLoading(resetPasswordButton);
                    }
                } catch (error) {
                    console.error('Reset password error:', error);
                    HRMS.showToast('Đã xảy ra lỗi khi đặt lại mật khẩu', 'danger');
                    HRMS.hideLoading(resetPasswordButton);
                }
            });

            // Back to step 1
            $('#backToStep1').click(function() {
                clearInterval(countdownTimer);
                goToStep1();
            });

            // OTP input: only numbers
            $('#otp').on('input', function() {
                this.value = this.value.replace(/[^0-9]/g, '');
            });
        });

        function goToStep2() {
            $('#step1').fadeOut(300, function() {
                $('#step2').fadeIn(300);
                $('#step-indicator-1').removeClass('active').addClass('completed');
                $('#step-indicator-2').addClass('active');
                $('#otp').focus();
                startCountdown();
            });
        }

        function goToStep1() {
            $('#step2').fadeOut(300, function() {
                $('#step1').fadeIn(300);
                $('#step-indicator-2').removeClass('active');
                $('#step-indicator-1').removeClass('completed').addClass('active');
                $('#otp').val('');
                $('#newPassword').val('');
                $('#confirmPassword').val('');
                timeRemaining = 300;
            });
        }

        function startCountdown() {
            timeRemaining = 300;
            updateCountdownDisplay();
            
            countdownTimer = setInterval(function() {
                timeRemaining--;
                updateCountdownDisplay();
                
                if (timeRemaining <= 0) {
                    clearInterval(countdownTimer);
                    HRMS.showToast('Mã OTP đã hết hạn. Vui lòng yêu cầu mã mới.', 'warning');
                }
            }, 1000);
        }

        function updateCountdownDisplay() {
            const minutes = Math.floor(timeRemaining / 60);
            const seconds = timeRemaining % 60;
            $('#countdown').text(`${minutes}:${seconds.toString().padStart(2, '0')}`);
            
            if (timeRemaining <= 60) {
                $('#countdown').addClass('text-danger fw-bold');
            }
        }
    </script>

    <style>
        .reset-password-page {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .card {
            border-radius: 15px;
        }

        .steps-indicator {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .step {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .step-number {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #e9ecef;
            color: #6c757d;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            transition: all 0.3s;
        }

        .step.active .step-number {
            background: #667eea;
            color: white;
        }

        .step.completed .step-number {
            background: #198754;
            color: white;
        }

        .step-label {
            font-size: 0.85rem;
            margin-top: 5px;
            color: #6c757d;
        }

        .step.active .step-label {
            color: #667eea;
            font-weight: bold;
        }

        .step-divider {
            width: 50px;
            height: 2px;
            background: #e9ecef;
            margin: 0 10px;
        }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #5568d3 0%, #6a3f8f 100%);
        }
    </style>
</body>
</html>

