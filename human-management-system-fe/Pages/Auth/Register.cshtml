@page
@model human_management_system_fe.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="login-page">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100 py-5">
            <div class="col-md-7 col-lg-6">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="login-icon mb-3">
                                <i class="bi bi-person-plus text-primary" style="font-size: 3rem;"></i>
                            </div>
                            <h3 class="fw-bold">Đăng ký tài khoản</h3>
                            <p class="text-muted">Tạo tài khoản mới cho HRMS</p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @Model.ErrorMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @Model.SuccessMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <form method="post" id="registerForm">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="RegisterInput.Username" class="form-label">
                                        <i class="bi bi-person me-1"></i>Username <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="RegisterInput.Username" class="form-control" 
                                           placeholder="Nhập username" autofocus>
                                    <span asp-validation-for="RegisterInput.Username" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="RegisterInput.Email" class="form-label">
                                        <i class="bi bi-envelope me-1"></i>Email <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="RegisterInput.Email" type="email" class="form-control" 
                                           placeholder="Nhập email">
                                    <span asp-validation-for="RegisterInput.Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="RegisterInput.Password" class="form-label">
                                        <i class="bi bi-lock me-1"></i>Password <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="RegisterInput.Password" type="password" class="form-control" 
                                               placeholder="Nhập password" id="password">
                                        <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="RegisterInput.Password" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="RegisterInput.ConfirmPassword" class="form-label">
                                        <i class="bi bi-lock-fill me-1"></i>Xác nhận Password <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="RegisterInput.ConfirmPassword" type="password" class="form-control" 
                                               placeholder="Nhập lại password" id="confirmPassword">
                                        <button class="btn btn-outline-secondary" type="button" id="toggleConfirmPassword">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="RegisterInput.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="RegisterInput.FirstName" class="form-label">
                                        <i class="bi bi-person me-1"></i>Tên
                                    </label>
                                    <input asp-for="RegisterInput.FirstName" class="form-control" 
                                           placeholder="Nhập tên">
                                    <span asp-validation-for="RegisterInput.FirstName" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="RegisterInput.LastName" class="form-label">
                                        <i class="bi bi-person me-1"></i>Họ
                                    </label>
                                    <input asp-for="RegisterInput.LastName" class="form-control" 
                                           placeholder="Nhập họ">
                                    <span asp-validation-for="RegisterInput.LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="RegisterInput.PhoneNumber" class="form-label">
                                        <i class="bi bi-phone me-1"></i>Số điện thoại
                                    </label>
                                    <input asp-for="RegisterInput.PhoneNumber" class="form-control" 
                                           placeholder="Nhập số điện thoại">
                                    <span asp-validation-for="RegisterInput.PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="RegisterInput.DateOfBirth" class="form-label">
                                        <i class="bi bi-calendar me-1"></i>Ngày sinh
                                    </label>
                                    <input asp-for="RegisterInput.DateOfBirth" type="date" class="form-control">
                                    <span asp-validation-for="RegisterInput.DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg" id="registerButton">
                                    <i class="bi bi-person-plus me-2"></i>Đăng ký
                                </button>
                            </div>

                            <div class="text-center">
                                <p class="mb-0">
                                    Đã có tài khoản? 
                                    <a href="/Auth/Login" class="text-decoration-none fw-bold">
                                        <i class="bi bi-box-arrow-in-right me-1"></i>Đăng nhập ngay
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        $(document).ready(function() {
            $('#togglePassword').click(function() {
                const passwordInput = $('#password');
                const icon = $(this).find('i');
                
                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    icon.removeClass('bi-eye').addClass('bi-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    icon.removeClass('bi-eye-slash').addClass('bi-eye');
                }
            });

            $('#toggleConfirmPassword').click(function() {
                const passwordInput = $('#confirmPassword');
                const icon = $(this).find('i');
                
                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    icon.removeClass('bi-eye').addClass('bi-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    icon.removeClass('bi-eye-slash').addClass('bi-eye');
                }
            });

            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>

    <style>
        .login-page {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .card {
            border-radius: 15px;
        }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #5568d3 0%, #6a3f8f 100%);
        }
    </style>
</body>
</html>

