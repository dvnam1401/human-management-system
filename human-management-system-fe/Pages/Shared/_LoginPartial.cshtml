@if (User.Identity?.IsAuthenticated == true)
{
    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <div class="user-avatar me-2">
                    <i class="bi bi-person-circle"></i>
                </div>
                <span class="d-none d-lg-inline">@User.Identity.Name</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li>
                    <a class="dropdown-item" asp-page="/Profile/Index">
                        <i class="bi bi-person me-2"></i>Thông tin cá nhân
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form method="post" asp-page="/Auth/Logout" id="logoutForm">
                        <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Bạn có chắc muốn đăng xuất?')">
                            <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-page="/Auth/Login">
                <i class="bi bi-box-arrow-in-right me-1"></i>Đăng nhập
            </a>
        </li>
    </ul>
}

<style>
    .user-avatar {
        font-size: 1.5rem;
    }
    
    .dropdown-menu {
        min-width: 200px;
    }
    
    .dropdown-item:hover {
        background-color: #f8f9fa;
    }

    #logoutForm {
        margin: 0;
        padding: 0;
    }

    #logoutForm button {
        width: 100%;
        text-align: left;
        border: none;
        background: none;
        cursor: pointer;
    }
</style>

